<!--pages/index/index.wxml-->
<view class="container">
  <!-- 主标题卡片 -->
  <view class="glass-card fadeInUp">
    <view class="main-title">
      <text class="logo-icon">⭐</text>
      <text class="logo-title">爪迹星·云纪念馆</text>
      <text class="logo-subtitle">每一颗星星，都留下了爱的爪迹</text>
    </view>
    
    <!-- 认证按钮区域 -->
    <view wx:if="{{!userInfo}}" class="auth-buttons">
      <button class="auth-btn" bindtap="goToLogin">登录</button>
      <button class="auth-btn" bindtap="goToRegister">注册</button>
    </view>
    
    <!-- 用户欢迎区域 -->
    <view wx:else class="user-welcome">
      <view class="welcome-text">欢迎回来！</view>
      <view class="user-email">{{userInfo.email}}</view>
    </view>
    
    <!-- 主要操作按钮 -->
    <view class="primary-action">
      <button class="primary-btn" bindtap="startCreateMemorial">
        <text class="btn-icon">🏠</text>
        <text class="btn-text">开始创建纪念馆</text>
      </button>
    </view>
  </view>

  <!-- 功能特性卡片 -->
  <view class="glass-card slideInLeft">
    <view class="feature-description">
      <text class="feature-title">✨ 功能特色</text>
      <view class="feature-grid">
        <view class="feature-item">
          <text class="feature-name">🎨 个性化设计</text>
          <text class="feature-desc">多种主题模板，支持自定义颜色和布局，让每个纪念馆都独一无二</text>
        </view>
        <view class="feature-item">
          <text class="feature-name">🤖 AI智能助手</text>
          <text class="feature-desc">基于宠物性格测试，AI生成个性化信件和纪念内容</text>
        </view>
        <view class="feature-item">
          <text class="feature-name">📱 响应式设计</text>
          <text class="feature-desc">完美适配手机、平板、电脑等各种设备，随时随地访问</text>
        </view>
        <view class="feature-item">
          <text class="feature-name">🔒 隐私保护</text>
          <text class="feature-desc">支持公开和私密模式，保护您的珍贵回忆</text>
        </view>
        <view class="feature-item">
          <text class="feature-name">📸 多媒体支持</text>
          <text class="feature-desc">支持照片、视频、音频等多种媒体格式</text>
        </view>
        <view class="feature-item">
          <text class="feature-name">☁️ 云端数据同步</text>
          <text class="feature-desc">数据云端存储，永不丢失，多设备同步访问</text>
        </view>
      </view>
    </view>
  </view>
  
  <!-- 用户操作区域 -->
  <view wx:if="{{userInfo}}" class="user-actions-section">
    <view class="glass-card">
      <text class="section-title">快速操作</text>
      <view class="action-grid">
        <button class="action-btn" bindtap="goToMemorials">
          <text class="btn-icon">🏛️</text>
          <text class="btn-text">我的纪念馆</text>
        </button>
        <button class="action-btn" bindtap="goToPhotoManager">
          <text class="btn-icon">📷</text>
          <text class="btn-text">照片管理</text>
        </button>
        <button class="action-btn" bindtap="goToUserCenter">
          <text class="btn-icon">👤</text>
          <text class="btn-text">个人中心</text>
        </button>
        <button class="action-btn" bindtap="goToPayment">
          <text class="btn-icon">💎</text>
          <text class="btn-text">充值升级</text>
        </button>
      </view>
    </view>
  </view>
</view>