/* pages/index/index.wxss */

.container {
  padding: 20rpx;
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

/* 主卡片 */
.main-card {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 30rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.title-section {
  text-align: center;
  margin-bottom: 40rpx;
}

.main-title {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  color: #2c3e50;
  margin-bottom: 20rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: #7f8c8d;
  line-height: 1.5;
}

/* 认证区域 */
.auth-section {
  display: flex;
  gap: 20rpx;
  justify-content: center;
}

.user-welcome {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 30rpx;
}

.welcome-text {
  text-align: center;
}

.welcome-title {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 10rpx;
}

.user-email {
  display: block;
  font-size: 28rpx;
  color: #7f8c8d;
}

.user-actions {
  display: flex;
  gap: 15rpx;
  flex-wrap: wrap;
  justify-content: center;
}

/* 功能特色 */
.features-section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: white;
  margin-bottom: 20rpx;
  text-align: center;
}

.features-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.feature-item {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  padding: 30rpx 20rpx;
  text-align: center;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  transition: all 0.3s ease;
}

.feature-item:active {
  transform: scale(0.98);
}

.feature-icon {
  font-size: 48rpx;
  margin-bottom: 15rpx;
}

.feature-title {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 8rpx;
}

.feature-desc {
  display: block;
  font-size: 24rpx;
  color: #7f8c8d;
  line-height: 1.4;
}

/* 等级卡片 */
.level-card {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.level-info {
  flex: 1;
}

.level-title {
  font-size: 24rpx;
  color: #7f8c8d;
  margin-bottom: 8rpx;
}

.level-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 8rpx;
}

.level-desc {
  font-size: 24rpx;
  color: #7f8c8d;
}

.upgrade-section {
  margin-left: 20rpx;
}

/* 统计信息 */
.stats-section {
  margin-bottom: 30rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.stat-item {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  padding: 30rpx 20rpx;
  text-align: center;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.stat-number {
  font-size: 36rpx;
  font-weight: 700;
  color: #2c3e50;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #7f8c8d;
}

/* 动画效果 */
.fade-in {
  animation: fadeIn 0.6s ease-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 响应式 */
@media (max-width: 750rpx) {
  .features-grid {
    grid-template-columns: 1fr;
  }
  
  .user-actions {
    flex-direction: column;
    align-items: stretch;
  }
  
  .level-card {
    flex-direction: column;
    text-align: center;
  }
  
  .upgrade-section {
    margin-left: 0;
    margin-top: 20rpx;
  }
}
