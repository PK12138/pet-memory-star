/* pages/index/index.wxss */

.container {
  max-width: 1200rpx;
  margin: 0 auto;
  padding: 20rpx;
  position: relative;
  z-index: 1;
}

/* Glassmorphism 卡片样式 */
.glass-card {
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  border-radius: 24rpx;
  box-shadow: 
    0 8rpx 32rpx rgba(0, 0, 0, 0.1),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.2);
  padding: 40rpx;
  margin-bottom: 30rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.glass-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
  transition: left 0.5s;
}

.glass-card:active::before {
  left: 100%;
}

/* 主标题区域 */
.main-title {
  text-align: center;
  margin-bottom: 40rpx;
}

.logo-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  display: block;
  animation: float 3s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translateY(0px) rotate(0deg); }
  33% { transform: translateY(-10rpx) rotate(1deg); }
  66% { transform: translateY(5rpx) rotate(-1deg); }
}

.logo-title {
  font-size: 48rpx;
  font-weight: 700;
  color: white;
  margin-bottom: 15rpx;
  display: block;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.logo-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  display: block;
  line-height: 1.5;
}

/* 认证按钮区域 */
.auth-buttons {
  display: flex;
  gap: 20rpx;
  justify-content: center;
  margin-bottom: 40rpx;
}

.auth-btn {
  padding: 20rpx 40rpx;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 50rpx;
  color: white;
  font-size: 28rpx;
  font-weight: 600;
  text-align: center;
  transition: all 0.3s ease;
  min-width: 120rpx;
}

.auth-btn:active {
  background: rgba(255, 255, 255, 0.3);
  transform: scale(0.98);
}

/* 用户欢迎区域 */
.user-welcome {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 30rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.welcome-text {
  font-size: 32rpx;
  font-weight: 600;
  color: white;
  margin-bottom: 10rpx;
  display: block;
}

.user-email {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  display: block;
}

/* 主要操作按钮 */
.primary-action {
  text-align: center;
}

.primary-btn {
  padding: 25rpx 50rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
  border: none;
  border-radius: 50rpx;
  color: white;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 25rpx rgba(102, 126, 234, 0.4);
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  margin: 0 auto;
}

.primary-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 15rpx rgba(102, 126, 234, 0.6);
}

.btn-icon {
  font-size: 32rpx;
}

.btn-text {
  font-size: 28rpx;
  font-weight: 600;
}

/* 功能特色区域 */
.feature-description {
  text-align: center;
}

.feature-title {
  font-size: 36rpx;
  font-weight: 700;
  color: white;
  margin-bottom: 40rpx;
  display: block;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.feature-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300rpx, 1fr));
  gap: 30rpx;
  text-align: left;
}

.feature-item {
  padding: 30rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  transition: all 0.3s ease;
}

.feature-item:active {
  background: rgba(255, 255, 255, 0.15);
  transform: translateY(-2rpx);
}

.feature-name {
  font-size: 28rpx;
  font-weight: 600;
  color: white;
  margin-bottom: 15rpx;
  display: block;
}

.feature-desc {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.5;
  display: block;
}

/* 用户操作区域 */
.user-actions-section {
  margin-top: 40rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: white;
  margin-bottom: 30rpx;
  display: block;
  text-align: center;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.action-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.action-btn {
  padding: 25rpx 20rpx;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  color: white;
  font-size: 24rpx;
  font-weight: 500;
  text-align: center;
  transition: all 0.3s ease;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  min-height: 120rpx;
}

.action-btn:active {
  background: rgba(255, 255, 255, 0.2);
  transform: scale(0.98);
}

.action-btn .btn-icon {
  font-size: 32rpx;
}

.action-btn .btn-text {
  font-size: 24rpx;
  font-weight: 500;
}

/* 动画效果 */
.fadeInUp {
  animation: fadeInUp 0.8s ease-out;
}

.slideInLeft {
  animation: slideInLeft 0.8s ease-out;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes slideInLeft {
  from {
    opacity: 0;
    transform: translateX(-30rpx);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .container {
    max-width: 100%;
    padding: 16rpx;
    margin: 0;
  }
  
  .feature-grid {
    grid-template-columns: 1fr;
  }
  
  .action-grid {
    grid-template-columns: 1fr;
  }
  
  .auth-buttons {
    flex-direction: column;
    gap: 15rpx;
  }
  
  .auth-btn {
    width: 100%;
  }
}