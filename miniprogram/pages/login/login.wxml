<!--pages/login/login.wxml-->
<view class="container">
  <view class="login-card">
    <view class="logo-section">
      <text class="logo-title">⭐ 爪迹星·云纪念馆</text>
      <text class="logo-subtitle">登录您的账户</text>
    </view>
    
    <view class="form-section">
      <view class="input-group">
        <text class="input-label">邮箱地址</text>
        <input 
          class="input" 
          type="text" 
          placeholder="请输入邮箱地址"
          value="{{email}}"
          bindinput="onEmailInput"
        />
      </view>
      
      <view class="input-group">
        <text class="input-label">密码</text>
        <input 
          class="input" 
          type="password" 
          placeholder="请输入密码"
          value="{{password}}"
          bindinput="onPasswordInput"
        />
      </view>
      
      <view class="form-actions">
        <button 
          class="btn btn-primary login-btn" 
          bindtap="login"
          disabled="{{loading}}"
        >
          {{loading ? '登录中...' : '登录'}}
        </button>
        
        <view class="link-group">
          <text class="link-text" bindtap="goToRegister">还没有账户？立即注册</text>
          <text class="link-text" bindtap="goToForgotPassword">忘记密码？</text>
        </view>
      </view>
    </view>
  </view>
</view>
