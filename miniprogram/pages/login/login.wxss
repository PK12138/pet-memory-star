/* pages/login/login.wxss */

.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.login-card {
  width: 100%;
  max-width: 600rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 30rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.logo-section {
  text-align: center;
  margin-bottom: 60rpx;
}

.logo-title {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  color: #2c3e50;
  margin-bottom: 20rpx;
}

.logo-subtitle {
  display: block;
  font-size: 28rpx;
  color: #7f8c8d;
}

.form-section {
  width: 100%;
}

.input-group {
  margin-bottom: 40rpx;
}

.input-label {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 15rpx;
}

.input {
  width: 100%;
  padding: 25rpx 30rpx;
  border: 2rpx solid #ecf0f1;
  border-radius: 20rpx;
  font-size: 28rpx;
  background: white;
  transition: all 0.3s ease;
}

.input:focus {
  border-color: #667eea;
  box-shadow: 0 0 0 6rpx rgba(102, 126, 234, 0.1);
}

.form-actions {
  margin-top: 50rpx;
}

.login-btn {
  width: 100%;
  height: 88rpx;
  font-size: 32rpx;
  margin-bottom: 30rpx;
}

.link-group {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.link-text {
  font-size: 26rpx;
  color: #667eea;
  text-decoration: underline;
}

.link-text:active {
  opacity: 0.7;
}
