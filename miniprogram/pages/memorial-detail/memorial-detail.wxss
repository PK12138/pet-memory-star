/* pages/memorial-detail/memorial-detail.wxss */

.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
  padding: 20rpx;
}

/* 纪念馆头部 */
.memorial-header {
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.1);
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.header-content {
  flex: 1;
}

.pet-name {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  color: #2c3e50;
  margin-bottom: 15rpx;
}

.pet-species {
  display: block;
  font-size: 28rpx;
  color: #7f8c8d;
  margin-bottom: 10rpx;
}

.pet-dates {
  display: block;
  font-size: 24rpx;
  color: #95a5a6;
}

.header-actions {
  display: flex;
  gap: 15rpx;
}

.action-btn {
  width: 80rpx;
  height: 80rpx;
  border: none;
  border-radius: 20rpx;
  font-size: 28rpx;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
}

.btn-edit {
  background: #3498db;
  color: white;
}

.btn-edit:active {
  background: #2980b9;
  transform: scale(0.95);
}

.btn-share {
  background: #2ecc71;
  color: white;
}

.btn-share:active {
  background: #27ae60;
  transform: scale(0.95);
}

/* 通用区域样式 */
.photo-section,
.info-section,
.description-section,
.personality-section,
.stats-section {
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: 700;
  color: #2c3e50;
  margin-bottom: 30rpx;
  text-align: center;
}

/* 照片区域 */
.photo-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(200rpx, 1fr));
  gap: 20rpx;
}

.photo-item {
  width: 100%;
  height: 200rpx;
  border-radius: 15rpx;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.photo-item:active {
  transform: scale(0.95);
}

/* 信息区域 */
.info-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(200rpx, 1fr));
  gap: 20rpx;
}

.info-item {
  background: rgba(102, 126, 234, 0.1);
  border-radius: 15rpx;
  padding: 25rpx;
  text-align: center;
}

.info-label {
  display: block;
  font-size: 24rpx;
  color: #7f8c8d;
  margin-bottom: 10rpx;
}

.info-value {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #2c3e50;
}

/* 描述区域 */
.description-content {
  background: rgba(102, 126, 234, 0.05);
  border-radius: 15rpx;
  padding: 30rpx;
}

.description-text {
  font-size: 28rpx;
  color: #2c3e50;
  line-height: 1.6;
  text-align: center;
}

/* 性格区域 */
.personality-content {
  background: rgba(46, 204, 113, 0.05);
  border-radius: 15rpx;
  padding: 30rpx;
}

.personality-text {
  font-size: 28rpx;
  color: #2c3e50;
  line-height: 1.6;
  text-align: center;
}

/* 统计区域 */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.stat-item {
  background: rgba(102, 126, 234, 0.1);
  border-radius: 15rpx;
  padding: 30rpx;
  text-align: center;
  transition: all 0.3s ease;
}

.stat-item:active {
  background: rgba(102, 126, 234, 0.2);
  transform: scale(0.95);
}

.stat-icon {
  display: block;
  font-size: 40rpx;
  margin-bottom: 15rpx;
}

.stat-number {
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  color: #2c3e50;
  margin-bottom: 8rpx;
}

.stat-label {
  display: block;
  font-size: 22rpx;
  color: #7f8c8d;
}

/* 元信息区域 */
.meta-section {
  text-align: center;
  padding: 30rpx;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.1);
}

.meta-text {
  display: block;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 10rpx;
}

.meta-text:last-child {
  margin-bottom: 0;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .container {
    padding: 16rpx;
  }
  
  .memorial-header {
    flex-direction: column;
    gap: 20rpx;
  }
  
  .header-actions {
    align-self: flex-end;
  }
  
  .info-grid {
    grid-template-columns: repeat(2, 1fr);
  }
  
  .stats-grid {
    grid-template-columns: 1fr;
    gap: 15rpx;
  }
  
  .photo-grid {
    grid-template-columns: repeat(auto-fill, minmax(150rpx, 1fr));
    gap: 15rpx;
  }
}

