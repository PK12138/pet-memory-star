/* pages/memorial-edit/memorial-edit.wxss */

.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
  padding: 20rpx;
}

.page-header {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 40rpx 20rpx;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.1);
}

.page-title {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  color: white;
  margin-bottom: 15rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.page-subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 编辑表单 */
.edit-form {
  margin-bottom: 40rpx;
}

.form-section {
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: 700;
  color: #2c3e50;
  margin-bottom: 30rpx;
  text-align: center;
}

.form-group {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 26rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 15rpx;
}

.form-input {
  width: 100%;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.8);
  border: 1rpx solid #e2e8f0;
  border-radius: 15rpx;
  font-size: 26rpx;
  color: #2c3e50;
  transition: all 0.3s ease;
}

.form-input:focus {
  border-color: #667eea;
  box-shadow: 0 0 0 6rpx rgba(102, 126, 234, 0.1);
  background: white;
}

.form-picker {
  width: 100%;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.8);
  border: 1rpx solid #e2e8f0;
  border-radius: 15rpx;
  font-size: 26rpx;
  color: #2c3e50;
  transition: all 0.3s ease;
}

.picker-text {
  color: #2c3e50;
  font-weight: 500;
}

.form-textarea {
  width: 100%;
  min-height: 150rpx;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.8);
  border: 1rpx solid #e2e8f0;
  border-radius: 15rpx;
  font-size: 26rpx;
  color: #2c3e50;
  transition: all 0.3s ease;
  font-family: inherit;
}

.form-textarea:focus {
  border-color: #667eea;
  box-shadow: 0 0 0 6rpx rgba(102, 126, 234, 0.1);
  background: white;
}

.form-row {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

/* 照片管理 */
.photo-upload {
  margin-bottom: 30rpx;
  text-align: center;
}

.upload-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
  border: none;
  border-radius: 50rpx;
  color: white;
  font-size: 28rpx;
  font-weight: 600;
  padding: 20rpx 40rpx;
  box-shadow: 0 8rpx 25rpx rgba(102, 126, 234, 0.4);
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  margin: 0 auto;
}

.upload-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 15rpx rgba(102, 126, 234, 0.6);
}

.photo-list {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(200rpx, 1fr));
  gap: 20rpx;
}

.photo-item {
  position: relative;
  border-radius: 15rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
}

.photo-image {
  width: 100%;
  height: 200rpx;
  border-radius: 15rpx;
}

.photo-delete {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 40rpx;
  height: 40rpx;
  background: rgba(231, 76, 60, 0.9);
  border: none;
  border-radius: 50%;
  color: white;
  font-size: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.photo-delete:active {
  transform: scale(0.9);
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 20rpx;
  padding: 0 20rpx;
}

.btn {
  flex: 1;
  padding: 25rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
  font-weight: 600;
  text-align: center;
  transition: all 0.3s ease;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
}

.btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
  color: white;
  box-shadow: 0 8rpx 25rpx rgba(102, 126, 234, 0.4);
}

.btn-primary:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 15rpx rgba(102, 126, 234, 0.6);
}

.btn-primary:disabled {
  opacity: 0.6;
  transform: none;
}

.btn-secondary {
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  color: white;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
}

.btn-secondary:active {
  background: rgba(255, 255, 255, 0.2);
  transform: scale(0.98);
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .container {
    padding: 16rpx;
  }
  
  .form-row {
    grid-template-columns: 1fr;
    gap: 15rpx;
  }
  
  .photo-list {
    grid-template-columns: repeat(auto-fill, minmax(150rpx, 1fr));
    gap: 15rpx;
  }
  
  .action-buttons {
    flex-direction: column;
  }
  
  .btn {
    width: 100%;
  }
}

