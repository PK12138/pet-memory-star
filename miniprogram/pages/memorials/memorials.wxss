/* pages/memorials/memorials.wxss */

.container {
  padding: 20rpx;
  min-height: 100vh;
  background: #f8f9fa;
}

.page-header {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 40rpx 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  color: white;
}

.page-title {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  margin-bottom: 15rpx;
}

.page-subtitle {
  display: block;
  font-size: 28rpx;
  opacity: 0.9;
}

.memorials-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(350rpx, 1fr));
  gap: 30rpx;
  margin-bottom: 40rpx;
}

.memorial-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.memorial-card:active {
  transform: translateY(-5rpx);
  box-shadow: 0 15rpx 40rpx rgba(0, 0, 0, 0.15);
}

.memorial-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.memorial-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
  flex: 1;
}

.memorial-actions {
  display: flex;
  gap: 10rpx;
}

.action-btn {
  width: 60rpx;
  height: 60rpx;
  border: none;
  border-radius: 50%;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.edit-btn {
  background: #3498db;
  color: white;
}

.share-btn {
  background: #27ae60;
  color: white;
}

.delete-btn {
  background: #e74c3c;
  color: white;
}

.action-btn:active {
  transform: scale(0.9);
}

.memorial-info {
  margin-bottom: 20rpx;
}

.info-item {
  display: flex;
  margin-bottom: 8rpx;
  font-size: 26rpx;
}

.info-label {
  font-weight: 600;
  color: #34495e;
  min-width: 120rpx;
}

.info-value {
  color: #7f8c8d;
  flex: 1;
}

.memorial-photos {
  display: flex;
  gap: 10rpx;
  margin-bottom: 20rpx;
  overflow-x: auto;
}

.photo-thumb {
  width: 80rpx;
  height: 80rpx;
  border-radius: 10rpx;
  flex-shrink: 0;
}

.photo-more {
  width: 80rpx;
  height: 80rpx;
  border-radius: 10rpx;
  background: #ecf0f1;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #7f8c8d;
  font-size: 24rpx;
  flex-shrink: 0;
}

.memorial-description {
  color: #7f8c8d;
  font-size: 26rpx;
  line-height: 1.5;
  margin-bottom: 20rpx;
  max-height: 60rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.memorial-stats {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 15rpx;
  border-top: 1rpx solid #ecf0f1;
}

.stat-item {
  text-align: center;
}

.stat-number {
  font-size: 28rpx;
  font-weight: 600;
  color: #2c3e50;
  display: block;
}

.stat-label {
  font-size: 22rpx;
  color: #7f8c8d;
  display: block;
}

.create-btn {
  position: fixed;
  bottom: 30rpx;
  right: 30rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 25rpx rgba(102, 126, 234, 0.4);
  transition: all 0.3s ease;
}

.create-btn:active {
  transform: scale(1.1);
}

.create-icon {
  font-size: 48rpx;
  color: white;
  font-weight: 300;
}

.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx;
  color: #7f8c8d;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.empty-state {
  text-align: center;
  padding: 80rpx 40rpx;
  color: #7f8c8d;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.empty-title {
  font-size: 36rpx;
  color: #2c3e50;
  margin-bottom: 15rpx;
  display: block;
}

.empty-description {
  font-size: 28rpx;
  margin-bottom: 40rpx;
  display: block;
  line-height: 1.5;
}

/* 响应式 */
@media (max-width: 750rpx) {
  .memorials-grid {
    grid-template-columns: 1fr;
  }
  
  .memorial-actions {
    flex-wrap: wrap;
  }
  
  .action-btn {
    width: 50rpx;
    height: 50rpx;
    font-size: 20rpx;
  }
}
