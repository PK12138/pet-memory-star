/* pages/memorials/memorials.wxss */

.container {
  min-height: 100vh;
  padding: 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
}

.memorials-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(350rpx, 1fr));
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.memorial-card {
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  border-radius: 25rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.1);
  padding: 30rpx;
  transition: all 0.3s ease;
  overflow: hidden;
}

.memorial-card:active {
  transform: scale(0.98);
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.2);
}

.memorial-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.memorial-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
  flex: 1;
}

.memorial-actions {
  display: flex;
  gap: 10rpx;
}

.action-btn {
  width: 60rpx;
  height: 60rpx;
  border: none;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  transition: all 0.3s ease;
}

.edit-btn {
  background: rgba(52, 152, 219, 0.1);
  color: #3498db;
}

.share-btn {
  background: rgba(46, 204, 113, 0.1);
  color: #2ecc71;
}

.delete-btn {
  background: rgba(231, 76, 60, 0.1);
  color: #e74c3c;
}

.action-btn:active {
  transform: scale(0.9);
}

.memorial-info {
  margin-bottom: 20rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 8rpx 0;
  border-bottom: 1rpx solid rgba(236, 240, 241, 0.5);
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 24rpx;
  color: #7f8c8d;
  font-weight: 500;
}

.info-value {
  font-size: 24rpx;
  color: #2c3e50;
  font-weight: 600;
}

.memorial-photos {
  display: flex;
  gap: 10rpx;
  margin-bottom: 20rpx;
  overflow-x: auto;
}

.photo-thumb {
  width: 80rpx;
  height: 80rpx;
  border-radius: 15rpx;
  object-fit: cover;
  flex-shrink: 0;
}

.photo-more {
  width: 80rpx;
  height: 80rpx;
  border-radius: 15rpx;
  background: rgba(102, 126, 234, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #667eea;
  font-weight: 600;
  flex-shrink: 0;
}

.memorial-description {
  font-size: 26rpx;
  color: #7f8c8d;
  line-height: 1.5;
  margin-bottom: 20rpx;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.memorial-stats {
  display: flex;
  justify-content: space-around;
  padding-top: 20rpx;
  border-top: 1rpx solid rgba(236, 240, 241, 0.5);
}

.stat-item {
  text-align: center;
}

.stat-number {
  display: block;
  font-size: 28rpx;
  font-weight: 700;
  color: #667eea;
  margin-bottom: 5rpx;
}

.stat-label {
  display: block;
  font-size: 22rpx;
  color: #7f8c8d;
}

.create-btn {
  position: fixed;
  bottom: 30rpx;
  right: 30rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 25rpx rgba(102, 126, 234, 0.4);
  transition: all 0.3s ease;
  z-index: 1000;
}

.create-btn:active {
  transform: scale(1.1);
}

.create-icon {
  font-size: 48rpx;
  color: white;
  font-weight: 300;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .memorials-grid {
    grid-template-columns: 1fr;
  }
  
  .memorial-actions {
    gap: 8rpx;
  }
  
  .action-btn {
    width: 50rpx;
    height: 50rpx;
    font-size: 20rpx;
  }
}