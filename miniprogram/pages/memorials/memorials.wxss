/* pages/memorials/memorials.wxss */

.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
  padding: 20rpx;
}

.page-header {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 40rpx 20rpx;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.1);
}

.page-title {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  color: white;
  margin-bottom: 15rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.page-subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 创建按钮 */
.create-section {
  margin-bottom: 40rpx;
  text-align: center;
}

.create-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
  border: none;
  border-radius: 50rpx;
  color: white;
  font-size: 32rpx;
  font-weight: 600;
  padding: 25rpx 50rpx;
  box-shadow: 0 8rpx 25rpx rgba(102, 126, 234, 0.4);
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  margin: 0 auto;
}

.create-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 15rpx rgba(102, 126, 234, 0.6);
}

.btn-icon {
  font-size: 28rpx;
}

.btn-text {
  font-size: 28rpx;
  font-weight: 600;
}

/* 纪念馆网格 */
.memorials-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(300rpx, 1fr));
  gap: 30rpx;
  margin-bottom: 40rpx;
}

/* 纪念馆卡片 */
.memorial-card {
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.memorial-card:active {
  transform: translateY(-5rpx);
  box-shadow: 0 15rpx 40rpx rgba(0, 0, 0, 0.15);
}

/* 纪念馆头部 */
.memorial-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.memorial-info {
  flex: 1;
}

.memorial-title {
  display: block;
  font-size: 32rpx;
  font-weight: 700;
  color: #2c3e50;
  margin-bottom: 8rpx;
}

.memorial-species {
  display: block;
  font-size: 24rpx;
  color: #7f8c8d;
}

.memorial-actions {
  display: flex;
  gap: 10rpx;
}

.action-btn {
  width: 60rpx;
  height: 60rpx;
  border: none;
  border-radius: 15rpx;
  font-size: 24rpx;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-edit {
  background: #3498db;
  color: white;
}

.btn-edit:active {
  background: #2980b9;
  transform: scale(0.95);
}

.btn-delete {
  background: #e74c3c;
  color: white;
}

.btn-delete:active {
  background: #c0392b;
  transform: scale(0.95);
}

/* 纪念馆照片 */
.memorial-photos {
  display: flex;
  gap: 10rpx;
  margin-bottom: 20rpx;
  overflow-x: auto;
}

.photo-item {
  width: 120rpx;
  height: 120rpx;
  border-radius: 15rpx;
  flex-shrink: 0;
}

/* 纪念馆描述 */
.memorial-description {
  margin-bottom: 20rpx;
}

.description-text {
  font-size: 26rpx;
  color: #2c3e50;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* 纪念馆统计 */
.memorial-stats {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
  padding: 20rpx;
  background: rgba(102, 126, 234, 0.1);
  border-radius: 15rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 5rpx;
}

.stat-icon {
  font-size: 24rpx;
}

.stat-text {
  font-size: 20rpx;
  color: #2c3e50;
  font-weight: 500;
}

/* 纪念馆元信息 */
.memorial-meta {
  text-align: center;
  padding-top: 20rpx;
  border-top: 1rpx solid rgba(0, 0, 0, 0.1);
}

.meta-text {
  font-size: 22rpx;
  color: #7f8c8d;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 40rpx;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.1);
}

.empty-icon {
  display: block;
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.empty-title {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: white;
  margin-bottom: 15rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.empty-desc {
  display: block;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 40rpx;
  line-height: 1.5;
}

.empty-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
  border: none;
  border-radius: 50rpx;
  color: white;
  font-size: 28rpx;
  font-weight: 600;
  padding: 20rpx 40rpx;
  box-shadow: 0 8rpx 25rpx rgba(102, 126, 234, 0.4);
  transition: all 0.3s ease;
}

.empty-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 15rpx rgba(102, 126, 234, 0.6);
}

/* 加载状态 */
.loading-state {
  text-align: center;
  padding: 60rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid rgba(255, 255, 255, 0.3);
  border-top: 6rpx solid white;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 0 auto 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 26rpx;
  color: white;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .container {
    padding: 16rpx;
  }
  
  .memorials-grid {
    grid-template-columns: 1fr;
    gap: 20rpx;
  }
  
  .memorial-stats {
    flex-direction: column;
    gap: 15rpx;
  }
  
  .stat-item {
    flex-direction: row;
    justify-content: center;
  }
}