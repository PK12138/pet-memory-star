/* pages/network-test/network-test.wxss */

.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
  padding: 20rpx;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 40rpx 20rpx;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.1);
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  color: white;
  margin-bottom: 15rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

.test-section {
  text-align: center;
  margin-bottom: 40rpx;
}

.test-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
  border: none;
  border-radius: 50rpx;
  color: white;
  font-size: 32rpx;
  font-weight: 600;
  padding: 25rpx 50rpx;
  box-shadow: 0 8rpx 25rpx rgba(102, 126, 234, 0.4);
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  margin: 0 auto;
}

.test-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 15rpx rgba(102, 126, 234, 0.6);
}

.result-section,
.recommendations,
.test-urls {
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: 700;
  color: #2c3e50;
  margin-bottom: 30rpx;
  text-align: center;
}

.result-item,
.url-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}

.result-item:last-child,
.url-item:last-child {
  border-bottom: none;
}

.result-label,
.url-label {
  font-size: 26rpx;
  color: #2c3e50;
  font-weight: 600;
}

.result-value,
.url-value {
  font-size: 24rpx;
  color: #7f8c8d;
  text-align: right;
  flex: 1;
  margin-left: 20rpx;
  word-break: break-all;
}

.result-value.success {
  color: #27ae60;
  font-weight: 600;
}

.result-value.error {
  color: #e74c3c;
  font-weight: 600;
}

.recommendation-item {
  padding: 15rpx 0;
}

.recommendation-text {
  font-size: 26rpx;
  color: #2c3e50;
  line-height: 1.5;
}
