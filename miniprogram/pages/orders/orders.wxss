/* pages/orders/orders.wxss */

.container {
  padding: 20rpx;
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
}

.page-header {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 40rpx 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
  border-radius: 20rpx;
  color: white;
}

.page-title {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  margin-bottom: 15rpx;
}

.page-subtitle {
  display: block;
  font-size: 28rpx;
  opacity: 0.9;
}

.orders-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.order-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.order-id {
  font-size: 26rpx;
  color: #7f8c8d;
}

.order-status {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 600;
}

.order-status.pending {
  background: #f39c12;
  color: white;
}

.order-status.completed {
  background: #27ae60;
  color: white;
}

.order-status.failed {
  background: #e74c3c;
  color: white;
}

.order-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.order-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
}

.order-price {
  font-size: 36rpx;
  font-weight: 700;
  color: #667eea;
}

.order-details {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.order-time,
.order-method {
  font-size: 24rpx;
  color: #7f8c8d;
}

.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx;
  color: #7f8c8d;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.empty-state {
  text-align: center;
  padding: 80rpx 40rpx;
  color: #7f8c8d;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.empty-title {
  font-size: 36rpx;
  color: #2c3e50;
  margin-bottom: 15rpx;
  display: block;
}

.empty-description {
  font-size: 28rpx;
  margin-bottom: 40rpx;
  display: block;
  line-height: 1.5;
}
