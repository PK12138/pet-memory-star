/* pages/payment/payment.wxss */

.container {
  padding: 20rpx;
  min-height: 100vh;
  background: #f8f9fa;
}

.page-header {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 40rpx 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  color: white;
}

.page-title {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  margin-bottom: 15rpx;
}

.page-subtitle {
  display: block;
  font-size: 28rpx;
  opacity: 0.9;
}

.plans-section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 20rpx;
}

.plans-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300rpx, 1fr));
  gap: 20rpx;
}

.plan-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.plan-card.selected {
  border-color: #667eea;
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.2);
}

.plan-card:active {
  transform: scale(0.98);
}

.plan-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 15rpx;
}

.plan-price {
  font-size: 48rpx;
  font-weight: 700;
  color: #667eea;
  margin-bottom: 15rpx;
}

.plan-desc {
  font-size: 26rpx;
  color: #7f8c8d;
  margin-bottom: 20rpx;
}

.plan-features {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.feature-item {
  font-size: 24rpx;
  color: #2c3e50;
  padding: 8rpx 0;
  border-bottom: 1rpx solid #ecf0f1;
}

.feature-item:last-child {
  border-bottom: none;
}

.payment-section {
  margin-bottom: 40rpx;
}

.payment-methods {
  display: flex;
  gap: 20rpx;
}

.payment-method {
  flex: 1;
  background: white;
  border-radius: 15rpx;
  padding: 30rpx 20rpx;
  text-align: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.payment-method.selected {
  border-color: #667eea;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.2);
}

.payment-method:active {
  transform: scale(0.98);
}

.payment-icon {
  font-size: 48rpx;
  margin-bottom: 15rpx;
}

.payment-name {
  font-size: 26rpx;
  color: #2c3e50;
  font-weight: 600;
}

.payment-actions {
  padding: 20rpx;
}

.payment-btn {
  width: 100%;
  height: 88rpx;
  font-size: 32rpx;
  font-weight: 600;
}

.payment-btn:disabled {
  background: #bdc3c7;
  color: #7f8c8d;
}
