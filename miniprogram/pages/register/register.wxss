/* pages/register/register.wxss */

.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  position: relative;
  overflow: hidden;
}

/* 动态背景效果 */
.container::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: 
    radial-gradient(circle at 20% 80%, rgba(120, 119, 198, 0.3) 0%, transparent 50%),
    radial-gradient(circle at 80% 20%, rgba(255, 119, 198, 0.3) 0%, transparent 50%),
    radial-gradient(circle at 40% 40%, rgba(120, 219, 255, 0.3) 0%, transparent 50%);
  z-index: -1;
  animation: float 20s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translateY(0px) rotate(0deg); }
  33% { transform: translateY(-20rpx) rotate(1deg); }
  66% { transform: translateY(10rpx) rotate(-1deg); }
}

/* 返回首页按钮 */
.back-home {
  position: absolute;
  top: 40rpx;
  left: 40rpx;
  color: white;
  font-size: 28rpx;
  text-decoration: underline;
  z-index: 10;
}

.back-home:active {
  opacity: 0.7;
}

/* Glassmorphism 注册容器 */
.auth-container {
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  border-radius: 30rpx;
  box-shadow: 
    0 20rpx 60rpx rgba(0, 0, 0, 0.1),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.2);
  padding: 60rpx 40rpx;
  width: 100%;
  max-width: 500rpx;
  position: relative;
  overflow: hidden;
}

.auth-container::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
  transition: left 0.5s;
}

.auth-container:active::before {
  left: 100%;
}

/* Logo区域 */
.logo {
  text-align: center;
  margin-bottom: 50rpx;
}

.logo-icon {
  font-size: 60rpx;
  margin-bottom: 15rpx;
  display: block;
  animation: float 3s ease-in-out infinite;
}

.logo-title {
  font-size: 40rpx;
  font-weight: 700;
  color: white;
  margin-bottom: 10rpx;
  display: block;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.logo-subtitle {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  display: block;
}

/* 消息提示 */
.success-message {
  background: rgba(46, 204, 113, 0.2);
  border: 1rpx solid rgba(46, 204, 113, 0.3);
  color: #2ecc71;
  padding: 20rpx;
  border-radius: 15rpx;
  margin-bottom: 30rpx;
  font-size: 26rpx;
  text-align: center;
}

.error-message-global {
  background: rgba(231, 76, 60, 0.2);
  border: 1rpx solid rgba(231, 76, 60, 0.3);
  color: #e74c3c;
  padding: 20rpx;
  border-radius: 15rpx;
  margin-bottom: 30rpx;
  font-size: 26rpx;
  text-align: center;
}

/* 表单样式 */
.register-form {
  width: 100%;
}

.form-group {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 26rpx;
  font-weight: 600;
  color: white;
  margin-bottom: 12rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.form-input {
  width: 85%;
  padding: 20rpx 20rpx;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  font-size: 26rpx;
  color: white;
  transition: all 0.3s ease;
  font-weight: 500;
  margin: 0 auto;
  display: block;
}

.form-input::placeholder {
  color: rgba(255, 255, 255, 0.8);
}

.form-input:focus {
  border-color: rgba(255, 255, 255, 0.5);
  box-shadow: 0 0 0 6rpx rgba(255, 255, 255, 0.1);
  background: rgba(255, 255, 255, 0.15);
}

.form-input.error {
  border-color: #e74c3c;
  background: rgba(231, 76, 60, 0.1);
}

.error-message {
  color: #e74c3c;
  font-size: 24rpx;
  margin-top: 10rpx;
  display: block;
}

/* 提交按钮 */
.submit-btn {
  width: 100%;
  padding: 25rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
  border: none;
  border-radius: 50rpx;
  color: white;
  font-size: 30rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 25rpx rgba(102, 126, 234, 0.4);
  transition: all 0.3s ease;
  margin-bottom: 25rpx;
}

.submit-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 15rpx rgba(102, 126, 234, 0.6);
}

.submit-btn:disabled {
  opacity: 0.6;
  transform: none;
}

/* 加载动画 */
.loading {
  text-align: center;
  margin: 30rpx 0;
}

.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top: 4rpx solid white;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 0 auto;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 分割线 */
.divider {
  text-align: center;
  margin: 40rpx 0 30rpx;
  position: relative;
}

.divider::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 0;
  right: 0;
  height: 1rpx;
  background: rgba(255, 255, 255, 0.2);
}

.divider-text {
  background: rgba(255, 255, 255, 0.1);
  color: rgba(255, 255, 255, 0.9);
  padding: 0 20rpx;
  font-size: 24rpx;
  position: relative;
  z-index: 1;
  font-weight: 500;
}

/* 切换表单 */
.switch-form {
  text-align: center;
}

.switch-link {
  color: white;
  font-size: 28rpx;
  text-decoration: underline;
  font-weight: 600;
}

.switch-link:active {
  opacity: 0.7;
}

/* 动画效果 */
.fadeInUp {
  animation: fadeInUp 0.8s ease-out;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .container {
    padding: 20rpx;
  }
  
  .auth-container {
    padding: 30rpx 20rpx;
    max-width: 100%;
  }
  
  .back-home {
    top: 20rpx;
    left: 20rpx;
  }
  
  .logo {
    margin-bottom: 25rpx;
  }
  
  .form-group {
    margin-bottom: 15rpx;
  }
  
  .form-input {
    width: 90%;
    padding: 18rpx 16rpx;
  }
}